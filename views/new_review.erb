<h1>Write a review for <%= @stadium[:stadium_name] %></h1>

<form action="/stadiums/<%= @stadium[:id] %>/reviews/create" method="post">
  <div class="form-group">
    <label>What date did you visit this stadium?</label>
    <input type="text" class="form-control" name="date_visited">
  </div>

  <div class="form-group">
    <label>How would you rate this stadium on a 1-10 scale (10 being the best)?</label>
    <input type="integer" class="form-control" name="score">
  </div>

  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="3" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>